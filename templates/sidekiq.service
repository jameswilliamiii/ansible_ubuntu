#
# systemd unit file for CentOS 7, Ubuntu 15.04
#
# Customize this file based on your bundler location, app directory, etc.
# Put this in /usr/lib/systemd/system (CentOS) or /lib/systemd/system (Ubuntu).
# Run:
#   - systemctl enable sidekiq
#   - systemctl {start,stop,restart} sidekiq
#
# This file corresponds to a single Sidekiq process.  Add multiple copies
# to run multiple processes (sidekiq-1, sidekiq-2, etc).
#
# See Inspeqtor's Systemd wiki page for more detail about Systemd:
# https://github.com/mperham/inspeqtor/wiki/Systemd
#
[Unit]
Description=sidekiq
# start us only once the network and logging subsystems are available,
# consider adding redis-server.service if Redis is local and systemd-managed.
After=syslog.target network.target

# See these pages for lots of options:
# http://0pointer.de/public/systemd-man/systemd.service.html
# http://0pointer.de/public/systemd-man/systemd.exec.html
[Service]
Type=simple
WorkingDirectory={{ rails_current_dir }}
ExecStart={{deploy_user_home_dir}}/.rbenv/shims/bundle exec sidekiq -e {{ rails_env }} -C {{rails_current_dir}}/config/sidekiq.yml -L {{ rails_shared_dir }}/log/sidekiq.log
ExecStop={{deploy_user_home_dir}}/.rbenv/shims/bundle exec sidekiqctl stop {{ rails_shared_dir }}/pids/sidekiq.pid >> {{ rails_shared_dir }}/log/sidekiq.log 2>&1
PIDFile={{ rails_shared_dir }}/pids/sidekiq.pid
User={{ deploy_user }}
Group={{ deploy_user }}
UMask=0002

# if we crash, restart
RestartSec=1
Restart=on-failure

# output goes to /var/log/syslog
StandardOutput=syslog
StandardError=syslog

# This will default to "bundler" if we don't specify it
SyslogIdentifier=sidekiq

[Install]
WantedBy=multi-user.target
